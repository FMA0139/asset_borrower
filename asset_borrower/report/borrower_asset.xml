<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_nc_borrower_asset" model="ir.actions.report">
            <field name="name">Borrower asset</field>
            <field name="model">nc.borrower_asset</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">asset_borrower.nc_borrower_asset_report</field>
            <field name="report_file">asset_borrower.nc_borrower_asset_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="asset_borrower.model_nc_borrower_asset"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="asset_borrower.nc_borrower_asset_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Borrower asset: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Transactions</h2>
                <table class="table table-sm o_main_table" name="transaction_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Description</td>
                            <td>Transaction date</td>
                            <td>Borrow time</td>
                            <td>Return time</td>
                            <td>Borrower</td>
                            <td>Borrowed</td>
                        </tr>
                    </thead>
                    <tbody class="transaction_ids_tbody">
                        <tr t-foreach="doc.transaction_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.description" /></td>
                            <td><span t-field="line.transaction_date" /></td>
                            <td><span t-field="line.borrow_time" /></td>
                            <td><span t-field="line.return_time" /></td>
                            <td><span t-field="line.borrower_id" /></td>
                            <td><span t-field="line.borrowed_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="asset_borrower.nc_borrower_asset_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="asset_borrower.nc_borrower_asset_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>