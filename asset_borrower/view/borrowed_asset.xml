<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_nc_borrowed_asset_tree" model="ir.ui.view">
            <field name="name">nc_borrowed_asset_tree</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Borrowed asset">
                    <field name="name" />
                    <field name="amount" />
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_nc_borrowed_asset_pivot" model="ir.ui.view">
            <field name="name">nc_borrowed_asset_tree</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Borrowed asset">
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_nc_borrowed_asset_form" model="ir.ui.view">
            <field name="name">nc_borrowed_asset_form</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Borrowed asset">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Borrowed asset Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="amount" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_nc_borrowed_asset_search" model="ir.ui.view">
            <field name="name">nc_borrowed_asset</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="arch" type="xml">
                <search string="Borrowed asset">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Amount" name="filter_by_amount" domain="[('amount','=','')]" />
                    <field name="name" select="True"/>
                    <field name="amount" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_nc_borrowed_asset_kanban" model="ir.ui.view" >
            <field name="name">nc_borrowed_asset</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="amount" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_nc_borrowed_asset_graph" model="ir.ui.view">
            <field name="name">nc_borrowed_asset</field>
            <field name="model">nc.borrowed_asset</field>
            <field name="arch" type="xml">
                <graph string="Borrowed asset" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_borrowed_asset" model="ir.actions.act_window">
            <field name="name">Borrowed asset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">nc.borrowed_asset</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Borrowed asset
                </p><p>
                Click the Create button to add a new Borrowed asset
                </p>
            </field>
        </record>

        <menuitem id="menu_borrowed_asset" name="Borrowed asset" parent="asset_borrower_config_menu" action="action_borrowed_asset" sequence="40"/>
    </data>
</odoo>